@page "/dashboard"

<h1>Hello, world!</h1>

Welcome @PasswordManagerMaui.Models.Setting.UserDetails.UserName;

@inject HttpClient _client;

@using System.Text.Json;
@using System.Linq;
@using System.Net.Http.Json;
@using Newtonsoft.Json
@using PasswordManagerMaui.Models

<h1>PasswordList</h1>

<p>This component demonstrates fetching data from a service.</p>

@if (passwords == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>UserName</th>
                <th>Password</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var forecast in passwords)
            {
                <tr>
                    <td>@forecast.UserName</td>
                    <td>@forecast.Password1</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<PasswordManagerMaui.Models.Password> passwords;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            HttpResponseMessage response = await _client.GetAsync("Password");
            if (response.IsSuccessStatusCode)
            {
                var contentStream = await response.Content.ReadAsStreamAsync();

                using var streamReader = new StreamReader(contentStream);
                using var jsonReader = new JsonTextReader(streamReader);

                Newtonsoft.Json.JsonSerializer serializer = new Newtonsoft.Json.JsonSerializer();

                try
                {
                    passwords = serializer.Deserialize<List<Password>>(jsonReader);
                }
                catch (JsonReaderException)
                {
                    Console.WriteLine("Invalid JSON.");
                }
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine(@"\tERROR {0}", ex.Message);
        }


    }
}
